pipeline {
    agent any

    environment {
        NETLIFY_SITE_ID = 'df7bc3b7-664f-4ac6-8028-252e6bb64850'  // ID du site Netlify
        NETLIFY_AUTH_TOKEN = credentials('netilfy-token')  // Token Netlify (stocké dans Jenkins)
        BUILD_DIR = 'build'  // Répertoire de build
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'Checking out code from repository...'
                checkout scm
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'nginx:latest'
                    reuseNode true
                }
            }
            steps {
                echo 'Building static site...'

                // Créer le répertoire de build et copier les fichiers dans ce répertoire
                sh '''
                    mkdir -p ${BUILD_DIR}
                    cp -r projet/* ${BUILD_DIR}/
                    ls -la ${BUILD_DIR}
                    echo "Static site built successfully."
                '''
            }
        }

        stage('Deploy') {
            agent {
                docker {
                    image 'node:18'  // Utilisation d'une image Node.js pour l'installation de Netlify CLI
                    reuseNode true
                }
            }
            steps {
                script {
                    echo 'Installing Netlify CLI...'
                    // Installation de Netlify CLI
                    sh 'npm install -g netlify-cli'
                    
                    echo 'Netlify CLI version:'
                    // Vérification de l'installation
                    sh 'netlify --version'

                    echo 'Deploying to Netlify...'
                    // Déploiement du site vers Netlify
                    sh '''
                        netlify deploy --dir=${BUILD_DIR} --prod --site=${NETLIFY_SITE_ID} --auth ${NETLIFY_AUTH_TOKEN}
                    '''
                }
            }
        }

    }
}
